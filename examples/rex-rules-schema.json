{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "REX Rules Schema",
  "type": "object",
  "properties": {
    "rules": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "priority": {
            "type": "integer",
            "default": 10
          },
          "conditions": {
            "type": "object",
            "properties": {
              "all": {
                "type": "array",
                "items": { "$ref": "#/definitions/conditionGroup" }
              },
              "any": {
                "type": "array",
                "items": { "$ref": "#/definitions/conditionGroup" }
              }
            },
            "oneOf": [{ "required": ["all"] }, { "required": ["any"] }]
          },
          "actions": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "type": {
                  "type": "string",
                  "enum": ["updateStore", "sendMessage"]
                },
                "target": {
                  "type": "string"
                },
                "value": {
                  "type": ["string", "boolean", "number"]
                },
                "customProperty": {
                  "type": "object"
                }
              },
              "required": ["type", "target", "value"]
            }
          }
        },
        "required": ["name", "conditions", "actions"]
      }
    }
  },
  "definitions": {
    "conditionGroup": {
      "type": "object",
      "properties": {
        "fact": {
          "type": "string",
          "pattern": "^[^:]+:[^:]+$"
        },
        "operator": {
          "type": "string",
          "enum": [
            "EQ",
            "NEQ",
            "LT",
            "LTE",
            "GT",
            "GTE",
            "CONTAINS",
            "NOT_CONTAINS"
          ]
        },
        "value": {
          "type": ["string", "number", "boolean"]
        },
        "all": {
          "type": "array",
          "items": { "$ref": "#/definitions/conditionGroup" }
        },
        "any": {
          "type": "array",
          "items": { "$ref": "#/definitions/conditionGroup" }
        }
      },
      "oneOf": [
        { "required": ["fact", "operator", "value"] },
        { "required": ["all"] },
        { "required": ["any"] }
      ]
    }
  }
}
